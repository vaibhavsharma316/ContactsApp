<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/call_user_choice_option"
        android:layout_marginLeft="42dp"
        android:padding="5dp"
        android:textSize="17sp"
        android:text="@string/call_user_choice_text"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msg_user_choice_text"
        android:id="@+id/msg_user_choice_option"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/call_user_choice_option"
        android:layout_alignLeft="@+id/call_user_choice_option"
        android:layout_alignStart="@+id/call_user_choice_option" />
</RelativeLayout>